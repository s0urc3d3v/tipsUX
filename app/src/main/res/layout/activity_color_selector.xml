<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.techredesign.uxfortips.colorSelector"
    android:id="@+id/colorSelectorLayout">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redColorSelection"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/primaryRed"
        android:onClick="red"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orangeColorSelection"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primaryOrange"
        android:onClick="orange"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tealColorSelection"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@color/primaryTeal"
        android:onClick="teal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greenColorSelection"
        android:layout_alignTop="@+id/tealColorSelection"
        android:layout_alignEnd="@+id/orangeColorSelection"
        android:background="@color/primaryGreen"
        android:onClick="green"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/darkThemeBtn"
        android:id="@+id/toggleDarkThemeBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/black"
        android:textColor="@color/white"
        android:onClick="toggleDarkTheme"/>


</RelativeLayout>
